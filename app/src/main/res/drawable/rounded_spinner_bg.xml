<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <item>
                <shape>
                    <gradient android:angle="90" android:endColor="#ffffff" android:startColor="#ffffff" android:type="linear" />
                    <corners android:radius="@dimen/_10dp" />
                    <padding android:bottom="@dimen/_3dp" android:left="@dimen/_3dp" android:right="@dimen/_3dp" android:top="@dimen/_3dp" />
                    <stroke android:width="@dimen/_1dp" android:color="@android:color/black" />
                </shape>
            </item>

            <item android:right="@dimen/_7dp">
                <bitmap android:gravity="center_vertical|right" android:src="@drawable/ic_drop_down" />
            </item>
        </layer-list>
    </item>
</selector>