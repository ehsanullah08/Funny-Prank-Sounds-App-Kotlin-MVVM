<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background shape with rounded corners and padding -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/smoky_gray" /> <!-- Light grey background color -->
            <corners android:radius="5dp" />
        </shape>
    </item>
    <!-- Dropdown icon -->
    <item android:end="@dimen/_10dp" android:gravity="end|center_vertical">
        <bitmap android:src="@drawable/ic_drop_down" android:tint="@android:color/black" />
    </item>
</layer-list>
